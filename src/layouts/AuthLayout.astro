---
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="min-h-screen bg-gradient-to-br from-[#0e0e20] to-[#1e1e3f] text-white">
    <main class="flex flex-col min-h-[90vh] justify-center items-center px-4 py-8">
      <div class="logo-container mb-8 w-full max-w-md flex justify-center">
        <a href="/">
          <img src="/images/logo.svg" alt="getTaste Logo" class="w-64" transition:name="logo" />
        </a>
      </div>

      <slot />

      <div class="mt-8 text-center max-w-md px-4">
        <p class="text-white/70">getTaste - Twój przewodnik po filmach i muzyce dopasowanych do Twoich preferencji.</p>
      </div>
    </main>

    <footer class="py-4 text-center text-white/50 text-sm">
      <p>&copy; {new Date().getFullYear()} getTaste. Wszystkie prawa zastrzeżone.</p>
    </footer>
  </body>
</html>
